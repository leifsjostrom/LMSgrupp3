            @if (Request.IsAuthenticated != true)
            {


                    <li>
                        <a href="@Url.Action("Login", "Account")" title="List View" class="links">
                            <img alt="Not logged in!, Please Login.." title="Not logged in!, Please Login.." src="@Url.Content("~/RESOURCES/images/logged_false.png")" class="halfsize">
                        </a>
                    </li>
            }
            else
            {
