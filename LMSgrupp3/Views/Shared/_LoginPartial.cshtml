@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    
    <ul class="nav navbar-nav navbar-right">
        
        <li>
            @Html.ActionLink("User: [ " + User.Identity.GetUserName() + " ]", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>

        <li>
            <a class="links" href="javascript:document.getElementById('logoutForm').submit()">
                <img alt="Logged in!, Click to Logout.." title="Logged in!, Click to Logout.." src="@Url.Content("~/RESOURCES/images/logged_true.png")" class="halfsize">
</li>
    </ul>
    
    }
    
    
}
else
{
    <ul class="nav navbar-nav navbar-right">
