                        <a href="@Url.Action("Logoff", "Account")" title="List View" class="links">
                            <img alt="Logged in!, Click to Logout.." title="Logged in!, Click to Logout.." src="@Url.Content("~/RESOURCES/images/logged_true.png")" class="halfsize">
                    </li>
            } 
                


       

        <br />
        </div>
