@model IEnumerable<LMSgrupp3.Models.SchemView>

@{
    ViewBag.Title = "List";
    var grid = new WebGrid(source: Model, rowsPerPage: 25);
    grid.Pager(WebGridPagerModes.All);
}


@if (Convert.ToBoolean(ViewData["Teacher"]) == false)
{

    <h2>List for student  @ViewData["Name"]</h2>

}
else
{


    <h2>List for teacher @ViewData["Name"]</h2>


}




<style type="text/css">
    /*Here we will add css for style webgrid*/
    .webgrid-table {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        font-size: 1.2em;
        width: 100%;
        display: table;
        border-collapse: separate;
        border: solid 1px #98BF21;
        background-color: white;
    }

        .webgrid-table td, th {
            border: 1px solid #98BF21;
            padding: 3px 7px 2px;
        }

    .webgrid-header {
        background-color: #A7C942;
        color: #FFFFFF;
        padding-bottom: 4px;
        padding-top: 5px;
        text-align: left;
    }

    .webgrid-footer {
    }

    .webgrid-row-style {
        padding: 3px 7px 2px;
    }

    .webgrid-alternating-row {
        background-color: #EAF2D3;
        padding: 3px 7px 2px;
    }
</style>

<div id="content">
    @grid.GetHtml(
                tableStyle: "webgrid-table",
                headerStyle: "webgrid-header",
                footerStyle: "webgrid-footer",
                alternatingRowStyle: "webgrid-alternating-row",
                rowStyle: "webgrid-row-style",


                    columns: grid.Columns(
            //here i will add column for serial no
            @*grid.Column(header: "Serial No", format: @<text><div>@(item.WebGrid.Rows.IndexOf(item) + 1)</div></text>),
                grid.Column(columnName:"Username",header:"Username"),
                grid.Column(columnName:"FullName", header:"Full Name"),
                grid.Column(header:"Email", format:@<text><a href="mailto:@item.EmailID">@item.EmailID</a></text>),
                grid.Column(header:"Is Active?", format:@<text><input type="checkbox" checked="@item.isActive" disabled="disabled" /></text>)*@
                            grid.Column(columnName: "time", header: "Time"),
                            grid.Column(columnName: "Day1", header: "Monday", canSort: false),
                            grid.Column(columnName: "Day2", header: "Tuesday", canSort: false),
                            grid.Column(columnName: "Day3", header: "Wednesday", canSort: false),
                            grid.Column(columnName: "Day4", header: "Thursday", canSort: false),
                            grid.Column(columnName: "Day5", header: "Friday", canSort: false),
                            grid.Column(columnName: "Day6", header: "Saturday", canSort: false),
                            grid.Column(columnName: "Day7", header: "Sunday", canSort: false)
                     ))

</div>





